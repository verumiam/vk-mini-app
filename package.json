{
  "name": "vite-mini-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "pnpm tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && pnpm run lint:md",
    "lint:md": "pnpm markdownlint --ignore-path .gitignore . --config ./markdownlint-config.js",
    "lint:md:fix": "pnpm markdownlint --fix --ignore-path .gitignore . --config ./markdownlint-config.js",
    "format": "pnpm prettier --write \"**/*.{css,js,jsx,ts,tsx,json}\"",
    "tunnel": "vk-tunnel --insecure=1 --http-protocol=http --ws-protocol=ws --host=0.0.0.0 --port=5173 --timeout=25000",
    "deploy:vk": "pnpm build && vk-miniapps-deploy"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.25.0",
    "@vkontakte/vk-bridge": "^2.14.1",
    "@vkontakte/vk-bridge-react": "^1.0.1",
    "@vkontakte/vkui": "^6.0.1",
    "axios": "^1.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@tanstack/eslint-plugin-query": "^5.27.7",
    "@tanstack/react-query-devtools": "^5.25.0",
    "@types/node": "^20.11.26",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vkontakte/vk-miniapps-deploy": "^0.1.6",
    "autoprefixer": "^10.4.14",
    "eruda": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
